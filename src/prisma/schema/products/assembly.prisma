model Assembly {
   id        String   @id @default(nanoid())
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

   name     String
   fileName String?

   buildTime    Int
   weight       Float
   initialPrice Float
   finalPrice   Float?

   flexibleOption ASFlexibleOption
   boardType      ASBoardType
   side           ASSide

   quantity        Int
   sensitiveParts  Boolean
   alternatesChina Boolean

   uniqueParts      Int
   smdParts         Int
   bgaParts         Int
   throughHoleParts Int

   customizedServices  ASCustomizedServices[]
   xrayTest            Int
   detailedInformation String

   orderId String
   order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

   productionStatuses ProductProductionStatus[]
}

enum ASFlexibleOption {
   TURNKEY
   KITTED
   COMBO
}

enum ASBoardType {
   SINGLE_PIECES
   PANELIZED_PCBS
}

enum ASSide {
   TOP_SIDE
   BOTTOM_SIDE
   BOTH_SIDES
}

enum ASCustomizedServices {
   DEPANEL_BOARDS
   FUNCTION_TEST
   CONFORMAL_COATING
   FIRMWARE_LOADING
   PRESS_FIT
   BOX_BUILD
   CABLE_WIRE_HARNESS
   PACKAGE_BOX
}
