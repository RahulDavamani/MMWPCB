model Stencil {
   id        String   @id @default(nanoid())
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

   type       STType
   multiLevel Boolean
   side       STSide

   size      String
   quantity  Int
   thickness Float

   existingFiducials STExistingFiducials
   electropolishing  Boolean
   specialRequests   String

   orderId String
   order   Order  @relation(fields: [orderId], references: [id])
}

enum STType {
   FRAMEWORK
   NON_FRAMEWORK
}

enum STSide {
   TOP_SIDE
   BOTTOM_SIDE
   TOP_BOTTOM_SINGLE
   TOP_BOTTOM_SEPARATE
}

enum STExistingFiducials {
   HALF_LASERED
   LASERED_THROUGH
   NONE
}
