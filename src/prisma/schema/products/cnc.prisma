model CNC {
   id        String   @id
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

   name String

   weight       Float
   initialPrice Float?
   finalPrice   Float?

   quantity    Int[]
   designUnits CNCDesignUnit
   material    CNCMaterial
   color       CNCColor

   technicalDrawing   String?
   threadsTappedHoles Boolean
   inserts            Boolean
   tolerance          Float
   surfaceRoughness   Float

   silkScreen         String
   laserEngraving     Boolean
   partsAssembly      CNCPartsAssembly
   finishedAppearance CNCFinishedAppearance
   inspection         CNCInspection

   productDescription CNCProductDescription
   specialRequests    String

   orderId String
   order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

   fabricationStatuses ProductFabricationStatus[]
   files               ProductFiles[]
}

enum CNCDesignUnit {
   MM
   CM
   INCH
}

enum CNCMaterial {
   ALUMINUM
   STAINLESS_STEEL
   MILD_STEEL
   COPPER
   CARBON_FIBER
}

enum CNCColor {
   SILVER_WHITE
   SILVER
   SILVER_GRAY
   COPPER
   BLACK
}

enum CNCPartsAssembly {
   NO
   ASSEMBLY_TEST
   SHIP_ASSEMBLY
}

enum CNCFinishedAppearance {
   STANDARD
   PREMIUM
}

enum CNCInspection {
   STANDARD_INSPECTION
   STANDARD_INSPECTION_FORMAL_REPORT
   CMM_INSPECTION_FORMAL_REPORT
   SOURCE_MATERIAL_CERTIFICATION
}

enum CNCProductDescription {
   PRINTER_ENCLOSURE
   INK_CARTRIDGE
   MOTORCYCLE_CONNECTOR_ENCLOSURE
   CNC_LATHE_REPLACEMENT_ARM
   HEADBAND
   WHEEL_PLATE
   RECORDER_ENCLOSURE
   COMPOUND_OPTICAL_MICROSCOPE
}
